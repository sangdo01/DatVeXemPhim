@model BookingCinema.Models.User
@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutLoginAdmin.cshtml";
}


<div style="display:none;">
    <span id="Message" class="d-none">@TempData["Message"]</span>
    <span id="Warning" class="d-none">@TempData["Warning"]</span>
    <span id="Error" class="d-none">@TempData["Error"]</span>
</div>

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
            <div class="row flex-grow">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left p-5">                      

                        <div class="brand-logo">
                            <span style="font-size: 40px">SL Cinema</span>
                            <img src="~/template/admin/assets/images/ls-logo.png" style="width:95px">
                        </div>
                        <form class="pt-3" method="post" action="~/Admin/Auth/Login">
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label for="username" style="font-size: 25px">Tài Khoản</label>
                                <input name="username" type="text" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Username">
                            </div>
                            <div class="form-group">
                                <label for="password" style="font-size: 25px">Mật Khẩu</label>
                                <input id="password" name="password" type="password" class="form-control form-control-lg" placeholder="********">
                            </div>
                            <div class="mt-3">
                                @*<a class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" href="@Url.Action("Login", "Auth")">Đăng Nhập</a>*@
                                <input style="background-color: #df0e62; border: none; text-decoration: none; color: white; padding: 20px 20px; margin: 20px 20px; cursor: pointer; " name="submit" type="submit" value="Đăng Nhập" />
                            </div>
                            @*<div class="my-2 d-flex justify-content-between align-items-center">
                <div class="form-check">
                    <label class="form-check-label text-muted">
                        <input type="checkbox" class="form-check-input"> Giữ cho tôi đăng nhập
                    </label>
                </div>
                <a href="#" class="auth-link text-black">Quên mật khẩu?</a>
            </div>*@

                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
<!-- container-scroller -->

@section Scripts {
    <script>
        $(document).ready(function () {
            var message = $('#Message').text();
            var warning = $('#Warning').text();
            var error = $('#Error').text();
            if (message != '') {
                toastr.success(message);
            }

            if (warning != '') {
                toastr.warning(warning);
            }

            if (error != '') {
                toastr.error(error);
            }
        });
    </script>
    }  
@model BookingCinema.Models.TinTuc
@{
    ViewBag.Title = "EditNews";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="container-fluid">

            <div class="row align-items-center">
                <div class="col-sm-6">
                    <div class="page-title-box">
                        <h4 class="font-size-18">Tin tức</h4>
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Admin</a></li>
                            <li class="breadcrumb-item active">Chỉnh sửa</li>
                        </ol>
                    </div>
                </div>
            </div>
            <!-- end page title -->



            @using (Html.BeginForm("EditNews", "News", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.id)
                                @Html.HiddenFor(model => model.status)
                                @Html.HiddenFor(model => model.thoi_gian_dang)
                                @Html.HiddenFor(model => model.anh)


                                <label>Tiêu đề</label>
                                <div class="col-md-10 marginadmin">
                                    @Html.EditorFor(model => model.tieu_de, new { htmlAttributes = new { @class = "form-control " } })
                                    @Html.ValidationMessageFor(model => model.tieu_de, "", new { @class = "text-danger" })
                                </div>

                                <label class="paddingadmin">Nội dung</label>
                                <div class="col-md-10 marginadmin">
                                    @Html.TextAreaFor(model => model.noi_dung, new { @class = "form-control marrginadmin", @id = "chitietsanpham" })
                                    @Html.ValidationMessageFor(model => model.noi_dung, "", new { @class = "text-danger" })
                                </div>

                                <label class="paddingadmin">Ảnh</label>
                                <div class="col-md-10 marginadmin">
                                    @Html.EditorFor(model => model.anh, new { htmlAttributes = new { type = "file", @class = "form-control " } })
                                    @Html.ValidationMessageFor(model => model.anh, "", new { @class = "text-danger" })
                                    <img class="img-thumbnail marginadmin" src="~/images/news/@Model.anh " alt="" width="300" height="300" />(Ảnh hiện tại)
                                </div>

                                <div class="float-lg-right">
                                    <div class="form-group mb-0">
                                        <div>
                                            <input type="submit" value="Save" class="btn btn-info btn-fw" />                               
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group mb-4">

                                </div>

                                <div class="form-group mb-0">
                                    @Html.ActionLink("Trở về", "ListNews")
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            }




        </div>
    </div>
</div>
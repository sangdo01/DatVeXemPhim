@model PagedList.IPagedList<BookingCinema.Models.LienHe>
@using PagedList.Mvc;
@{
    ViewBag.Title = "ListFeedback";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="container-fluid">
            <!-- start page title -->
            <div class="row align-items-center">
                <div class="col-sm-6">
                    <div class="page-title-box">
                        <h4 class="font-size-18">Danh sách liên hệ</h4>
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Admin</a></li>
                            <li class="breadcrumb-item active">Phản hồi của khách hàng</li>
                        </ol>
                    </div>
                </div>

            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">

                            <div class="tab-content">
                                <div class="tab-pane active p-3" id="list" role="tabpanel">

                                    <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                        <thead>
                                            <tr>
                                                <th>
                                                    STT
                                                </th>
                                                <th>
                                                    Họ tên
                                                </th>
                                                <th>
                                                    Email
                                                </th>
                                                <th>
                                                    Tiêu đề
                                                </th>
                                                <th>
                                                    Nội dung
                                                </th>
                                                <th>
                                                    Ngày gửi
                                                </th>
                                                <th>
                                                    Công cụ
                                                </th>
                                            </tr>
                                        </thead>

                                        @{ int rownumber = 1; }
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                //if (item.status != 0)
                                                //{
                                                <tr>
                                                    <td>
                                                        @(rownumber++)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.ho_ten)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.email)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.tieu_de)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.noi_dung)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.create_at)
                                                    </td>


                                                    <td>
                                                        <button type="button" class="btn btn-danger waves-effect waves-light" data-toggle="tooltip" data-placement="top" title="Xóa">
                                                            <a href="@Url.Action("DeleteConfirm", "FeedBack", new { id = item.id })" class="text-white">
                                                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-trash" width="16" height="16" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ffffff" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                                    <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                                    <line x1="4" y1="7" x2="20" y2="7" />
                                                                    <line x1="10" y1="11" x2="10" y2="17" />
                                                                    <line x1="14" y1="11" x2="14" y2="17" />
                                                                    <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
                                                                    <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" />
                                                                </svg>
                                                            </a>
                                                        </button>
                                                    </td>

                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div> <!-- end row -->


            <div class="row">
                <div class="col-sm-12 col-md-5">
                    <div>
                        Trang @(Model.PageNumber>Model.PageCount?3:Model.PageNumber) /@Model.PageCount
                    </div>
                </div>
                <div class="col-sm-12 col-md-7">
                    <div class="menuTrang">
                        @if (Model.Count > 0)
                        {
                            @*@Html.PagedListPager(Model, page => Url.Action("listMovie", "Movie", new { page}), PagedListRenderOptions.OnlyShowFivePagesAtATime)*@
                            @Html.PagedListPager(Model, page => Url.Action("ListFeedback", new { page = page }))
                        }

                    </div>

                </div>
            </div>

        </div>
    </div>
</div>
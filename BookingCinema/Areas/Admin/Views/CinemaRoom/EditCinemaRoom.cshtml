@model BookingCinema.Models.PhongChieu
@{
    ViewBag.Title = "EditCinemaRoom";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="container-fluid">
            <div class="row align-items-center">

                <div class="col-sm-6">
                    <div class="page-title-box">
                        <h4 class="font-size-18">Phòng Chiếu</h4>
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Admin</a></li>
                            <li class="breadcrumb-item"><a href="@Url.Action("ListCinemaRoom", "CinemaRoom")">Phòng chiếu</a></li>
                            <li class="breadcrumb-item active">Chỉnh sửa phòng chiếu</li>
                        </ol>
                    </div>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.id)
                                    @Html.HiddenFor(model => model.so_ghe)
                                    @Html.HiddenFor(model => model.status)
                                    <div class="form-group row">
                                        @Html.LabelFor(model => model.ten_phong_chieu, "Tên phòng chiếu", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                                        <div class="col-sm-10">
                                            @Html.EditorFor(model => model.ten_phong_chieu, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.ten_phong_chieu, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        @Html.Label("Rạp phim", htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                                        <div class="col-md-10">
                                            @Html.DropDownListFor(model => model.rap_chieu_id, (SelectList)ViewBag.id_rapc, new { @class = "col-sm-2 col-form-label" })
                                        </div>
                                    </div>

                                    <div class="float-lg-right">
                                        <div class="form-group mb-0">
                                            <div>
                                                <input type="submit" value="Save" class="btn btn-info btn-fw" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group mb-4">

                                    </div>

                                    <div class="form-group mb-0">
                                        @Html.ActionLink("Trở về", "ListCinemaRoom")
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>



@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}




<div class="container_signup_signin" id="container_signup_signin">

    <div class="form-container sign-in-container">
        <form name="sign-in-form" style="color: var(--theme-title);" action="/User/Login" method="post"
              onsubmit="return signInValidateForm()">
            @Html.AntiForgeryToken()
            <h1>Đăng Nhập</h1>
            <div class="social-container">
                <a href="#" class="social" style="color: var(--theme-title);"><i class="fab fa-facebook-f"></i></a>

            </div>
            <span>hoặc sử dụng tài khoản của bạn</span>
            <input id="email" name="email" type="email" placeholder="Email" />
            <input id="matkhau" name="matkhau" type="password" placeholder="Password" />
            <a href="#">Quên mật khẩu?</a>
            <button type="submit">Đăng nhập</button>
        </form>
    </div>
    <div class="overlay-container">
        <div class="overlay">

            <div class="overlay-panel overlay-right">
                <h1>Hello, Friend!</h1>
                <p>Đăng nhập và đặt vé ngay bây giờ!!!!!!</p>
                <a href="@Url.Action("Register", "User")">
                    <button class="ghost" @*id="signUp"*@>Đăng Ký</button>
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var message = $('#Message').text();
            var warr = $('#Warning').text();
            if (message !== '') {
                toastr.success(message);
            }

            if (message !== '') {
                toastr.error(warr);
            }
        });


    </script>
}


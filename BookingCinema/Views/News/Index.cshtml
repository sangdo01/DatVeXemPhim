@using PagedList.Mvc
@model PagedList.IPagedList<BookingCinema.Models.TinTuc>
@{
    ViewBag.Title = "Tin Tức";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="w3l-albums py-5" id="projects">
    <div class="container py-lg-4">
        <div class="row">
            <div class="col-lg-12 mx-auto">
                <!--Horizontal Tab-->
                <div id="parentHorizontalTab">
                    @*<ul class="resp-tabs-list hor_1">
                            <li>Recent Movies</li>
                            <li>Popular Movies</li>
                            <li>Trend Movies</li>
                            <div class="clear"></div>
                        </ul>*@
                    <div class="resp-tabs-container hor_1">
                        <div class="albums-content">
                            <div class="row">
                                <!--/set1-->
                                @foreach (var item in Model)
                                {
                                    <div class="col-lg-4 new-relise-gd mt-lg-0 mt-0">
                                        <div class="slider-info">
                                            <div class="img-circle">
                                                @*add page detail into tag a*@
                                                <a href="@Url.Action("NewsDetail", "News", new { page = 1, id = item.id})">
                                                    <img src="~/images/news/@item.anh" class="img-fluid"
                                                         alt="author image">
                                                </a>
                                            </div>
                                            <div class="message">
                                                @*<p>English</p>*@
                                                <a class="author-book-title" href="@Url.Action("NewsDetail", "News", new { page = 1, id = item.id})">@item.tieu_de</a>
                                                <h4>
                                                    <span class="post">
                                                        <span class="fa fa-clock-o"> </span>@Html.FormatValue(item.thoi_gian_dang, "{0:dd/MM/yyyy}")
                                                    </span>

                                                    <span class="post fa fa-heart text-right"></span>
                                                </h4>
                                            </div>
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>



                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12 col-md-5">
                <div>
                    Trang @(Model.PageNumber>Model.PageCount?3:Model.PageNumber) /@Model.PageCount
                </div>
            </div>
            <div class="col-sm-12 col-md-7">
                <div class="pagination-area text-center">
                    <div class="menuTrang">
                        @if (Model.Count > 0)
                        {
                            @Html.PagedListPager(Model, page => Url.Action("Index", "News", new { page }), PagedListRenderOptions.OnlyShowFivePagesAtATime)
                        }
                    </div>

                </div>


            </div>
        </div>

        @*<div class="pagination-area text-center">
            @Html.PagedListPager(Model, page => Url.Action("Index", "News", new { page }), PagedListRenderOptions.OnlyShowFivePagesAtATime)
        </div>*@

    </div>
</section>

